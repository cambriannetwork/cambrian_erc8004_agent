# Standalone Python ADK server for local testing
# Matches production Python environment but simpler for iteration

FROM python:3.11-slim

WORKDIR /app

# Install system dependencies
RUN apt-get update && apt-get install -y \
    gcc \
    curl \
    wget \
    && rm -rf /var/lib/apt/lists/*

# Copy Python requirements
COPY agent/python_adk/requirements.txt ./

# Install Python dependencies
RUN pip install --no-cache-dir --upgrade pip && \
    pip install --no-cache-dir -r requirements.txt

# Copy Python ADK source
COPY agent/python_adk/ ./

# Create non-root user
RUN useradd -m -u 1000 pythonuser && chown -R pythonuser:pythonuser /app
USER pythonuser

# Expose port
EXPOSE 9000

# Health check
HEALTHCHECK --interval=30s --timeout=10s --start-period=40s --retries=3 \
    CMD wget --spider -q http://localhost:9000/health || exit 1

# Run Python server
CMD ["python3", "server.py"]
