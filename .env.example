# ERC-8004 TEE Agent - Environment Variables Template
# Copy this file to .env and fill in your values

# ============================================================================
# GCP Configuration (for GitHub Actions)
# ============================================================================
GCP_PROJECT_ID=your-gcp-project-id
GCP_ZONE=us-central1-a
# Note: GCP_DEPLOY_SA should be set as a GitHub Secret, not in .env

# ============================================================================
# Blockchain Configuration
# ============================================================================
# Base Sepolia RPC endpoint
BASE_SEPOLIA_RPC=https://sepolia.base.org
# Alternative RPCs:
# BASE_SEPOLIA_RPC=https://lb.drpc.org/base-sepolia/YOUR_KEY
# BASE_SEPOLIA_RPC=https://base-sepolia.g.alchemy.com/v2/YOUR_KEY

# Chain ID for Base Sepolia
CHAIN_ID=84532

# ============================================================================
# Agent Wallet
# ============================================================================
# Agent's Ethereum private key (MUST be funded with Base Sepolia ETH)
# Get testnet ETH from: https://faucet.quicknode.com/base/sepolia
SELLER_PRIVATE_KEY=0xYOUR_PRIVATE_KEY_HERE

# Alternative names (agent uses any of these):
# AGENT_PRIVATE_KEY=
# CAMBRIAN_AGENT_PRIVATE_KEY=

# ============================================================================
# Contract Addresses (Base Sepolia)
# ============================================================================

# OFFICIAL ERC-8004 SINGLETON CONTRACTS (REQUIRED FOR INTEROPERABILITY)
# These are the canonical testnet contracts deployed by the ERC-8004 team
# Source: https://github.com/erc-8004/erc-8004-contracts

# Base Sepolia (RECOMMENDED - USE THESE)
IDENTITY_REGISTRY=0x8004AA63c570c570eBF15376c0dB199918BFe9Fb
REPUTATION_REGISTRY=0x8004bd8daB57f14Ed299135749a5CB5c42d341BF
VALIDATION_REGISTRY=0x8004C269D0A5647E51E121FeB226200ECE932d55

# Sepolia (Alternative if using Sepolia mainnet)
# IDENTITY_REGISTRY=0x8004a6090Cd10A7288092483047B097295Fb8847
# REPUTATION_REGISTRY=0x8004B8FD1A363aa02fDC07635C0c5F94f6Af5B7E
# VALIDATION_REGISTRY=0x8004CB39f29c09145F24Ad9dDe2A108C1A2cdfC5

# OPTIONAL: Additional Custom Registries (Not part of ERC-8004 core spec)
# Only use if you need features beyond the standard
# ProofRegistry (proof submissions with TEE attestation)
PROOF_REGISTRY=0x497f2f7081673236af8B2924E673FdDB7fAeF889

# ServiceExecutionRegistry (on-chain execution tracking)
SERVICE_EXECUTION_REGISTRY=0x1a32B3ABE438A2b4e4D1E183d2de9feAf9Ac1181

# ============================================================================
# Cambrian Network API
# ============================================================================
# Get your API key from: https://cambrian.network
CAMBRIAN_API_KEY=YOUR_CAMBRIAN_API_KEY_HERE

# ============================================================================
# IPFS Storage (Pinata)
# ============================================================================
# Sign up at: https://pinata.cloud (free tier available)
PINATA_API_KEY=YOUR_PINATA_API_KEY
PINATA_SECRET_KEY=YOUR_PINATA_SECRET_KEY

# Optional: Custom gateway for faster retrieval
PINATA_GATEWAY=https://YOUR_GATEWAY.mypinata.cloud
PINATA_GATEWAY_KEY=YOUR_GATEWAY_KEY

# ============================================================================
# TEE Configuration
# ============================================================================
# Enable TEE mode (set by GCP Confidential Space automatically)
TEE_MODE=true

# Node environment (production for TEE)
NODE_ENV=production

# Container digest (set automatically during build)
CONTAINER_DIGEST=sha256:your_container_digest

# Bypass payment for testing (set to false in production)
BYPASS_PAYMENT=true

# ============================================================================
# Agent Configuration
# ============================================================================
# Agent ID (from ERC-8004 registry)
AGENT_ID=1

# Agent domain
AGENT_DOMAIN=tee-agent.base

# Server port
PORT=8080

# ============================================================================
# Google ADK + MCP Integration (for /api/ask endpoint)
# ============================================================================
# Google Gemini API Key for natural language processing
# Get from: https://aistudio.google.com/app/apikey
GEMINI_API_KEY=YOUR_GEMINI_API_KEY_HERE

# MCP Server URL (TEE instance with 68+ Cambrian API tools)
MCP_SERVER_URL=http://136.115.87.101:8081

# Cambrian API Key for MCP server authentication
# (can be same as CAMBRIAN_API_KEY above)
SERVER_CAMBRIAN_API_KEY=YOUR_CAMBRIAN_API_KEY_HERE

# ============================================================================
# Build Metadata (set automatically by GitHub Actions)
# ============================================================================
GIT_COMMIT=unknown
GIT_BRANCH=main
BUILD_TIMESTAMP=0
BUILD_NUMBER=0
GIT_REPOSITORY=your-org/your-repo
